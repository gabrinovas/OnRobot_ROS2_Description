<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:include filename="$(find onrobot_description)/urdf/inc/common_utils.xacro" />
  <xacro:include filename="$(find onrobot_description)/urdf/inc/common_materials.xacro" />

  <!-- 3FG15 Macro - Proper 3-finger centripetal gripper with revolute joints -->
  <xacro:macro name="onrobot_3fg15" params="prefix onrobot_type:='3fg15'">

    <!-- Base Link -->
    <link name="${prefix}onrobot_base_link">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="1.8"/>
        <inertia ixx="0.015" ixy="0.0" ixz="0.0" iyy="0.015" iyz="0.0" izz="0.010"/>
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://onrobot_description/meshes/3fg15/visual/base.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="onrobot_silver"/>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://onrobot_description/meshes/3fg15/collision/base.stl" scale="0.001 0.001 0.001"/>
        </geometry>
      </collision>
    </link>

    <!-- Finger Links -->
    <link name="${prefix}left_finger_link">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="0.1"/>
        <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://onrobot_description/meshes/3fg15/visual/left_finger.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="onrobot_silver"/>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.01 0.02 0.06"/>
        </geometry>
      </collision>
    </link>

    <link name="${prefix}middle_finger_link">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="0.1"/>
        <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://onrobot_description/meshes/3fg15/visual/middle_finger.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="onrobot_silver"/>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.01 0.02 0.06"/>
        </geometry>
      </collision>
    </link>

    <link name="${prefix}right_finger_link">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="0.1"/>
        <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://onrobot_description/meshes/3fg15/visual/right_finger.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="onrobot_silver"/>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.01 0.02 0.06"/>
        </geometry>
      </collision>
    </link>

    <!-- Dummy link for the main control joint (diameter control) -->
    <link name="${prefix}finger_width_mock_link"/>
    
    <!-- Main control joint (finger_width) - represents target diameter -->
    <joint name="${prefix}finger_width" type="prismatic">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <parent link="${prefix}onrobot_base_link"/>
      <child link="${prefix}finger_width_mock_link"/>
      <axis xyz="0 0 1"/>
      <limit lower="0" upper="0.15" velocity="0.3" effort="240"/>
    </joint>

    <!-- Finger Joints - Revolute joints for centripetal movement -->
    <!-- Each finger rotates around the Z-axis at its mounting point -->
    
    <!-- Left Finger (120 degrees) -->
    <joint name="${prefix}left_finger_joint" type="revolute">
      <origin xyz="0 0 0" rpy="0 0 0"/> <!-- 120 degrees -->
      <parent link="${prefix}onrobot_base_link"/>
      <child link="${prefix}left_finger_link"/>
      <axis xyz="0 0 1"/>
      <limit lower="-0.5236" upper="0.5236" effort="80" velocity="0.3"/> <!-- ±30 degrees -->
      <!-- Mimic relationship: as diameter decreases, fingers rotate inward -->
      <mimic joint="${prefix}finger_width" multiplier="-3.0" offset="0.5236"/>
    </joint>

    <!-- Middle Finger (0 degrees) -->
    <joint name="${prefix}middle_finger_joint" type="revolute">
      <origin xyz="0 0 0" rpy="0 0 0"/> <!-- 0 degrees -->
      <parent link="${prefix}onrobot_base_link"/>
      <child link="${prefix}middle_finger_link"/>
      <axis xyz="0 0 1"/>
      <limit lower="-0.5236" upper="0.5236" effort="80" velocity="0.3"/> <!-- ±30 degrees -->
      <!-- Mimic relationship: as diameter decreases, fingers rotate inward -->
      <mimic joint="${prefix}finger_width" multiplier="-3.0" offset="0.5236"/>
    </joint>

    <!-- Right Finger (240 degrees) -->
    <joint name="${prefix}right_finger_joint" type="revolute">
      <origin xyz="0 0 0" rpy="0 0 0"/> <!-- 240 degrees -->
      <parent link="${prefix}onrobot_base_link"/>
      <child link="${prefix}right_finger_link"/>
      <axis xyz="0 0 1"/>
      <limit lower="-0.5236" upper="0.5236" effort="80" velocity="0.3"/> <!-- ±30 degrees -->
      <!-- Mimic relationship: as diameter decreases, fingers rotate inward -->
      <mimic joint="${prefix}finger_width" multiplier="-3.0" offset="0.5236"/>
    </joint>

    <!-- TCP Link -->
    <link name="${prefix}gripper_tcp"/>
    <joint name="${prefix}tcp_joint" type="fixed">
      <origin xyz="0 0 0.08" rpy="0 0 0"/>
      <parent link="${prefix}onrobot_base_link"/>
      <child link="${prefix}gripper_tcp"/>
    </joint>

    <!-- Transmission for ROS Control -->
    <xacro:transmission_macro prefix="${prefix}" joint_name="finger_width"/>

  </xacro:macro>
</robot>