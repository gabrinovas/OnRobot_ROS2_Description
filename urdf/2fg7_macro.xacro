<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:include filename="$(find onrobot_description)/urdf/inc/common_utils.xacro" />
  <xacro:include filename="$(find onrobot_description)/urdf/inc/2fg7_materials.xacro" />

  <xacro:macro name="onrobot_2fg7" params="prefix onrobot_type:='2fg7'">
    
    <!-- Base Link -->
    <link name="${prefix}onrobot_base_link">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="0.5"/>
        <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://onrobot_description/meshes/2fg7/visual/base_link.stl"/>
        </geometry>
        <material name="silver"/>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.08 0.08 0.06"/>
        </geometry>
      </collision>
    </link>

    <!-- Finger Links (simplified for 2FG7) -->
    <link name="${prefix}left_finger_link">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="0.1"/>
        <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://onrobot_description/meshes/2fg7/visual/left_finger_link.stl"/>
        </geometry>
        <material name="silver"/>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.02 0.03 0.08"/>
        </geometry>
      </collision>
    </link>

    <link name="${prefix}right_finger_link">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="0.1"/>
        <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://onrobot_description/meshes/2fg7/visual/right_finger_link.stl"/>
        </geometry>
        <material name="silver"/>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.02 0.03 0.08"/>
        </geometry>
      </collision>
    </link>

    <!-- Dummy link for the main control joint -->
    <link name="${prefix}finger_width_mock_link"/>
    
    <!-- Main control joint (finger_width) -->
    <joint name="${prefix}finger_width" type="prismatic">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <parent link="${prefix}onrobot_base_link"/>
      <child link="${prefix}finger_width_mock_link"/>
      <axis xyz="0 0 1"/>
      <limit lower="0" upper="0.07" velocity="0.45" effort="140"/>
    </joint>

    <!-- Left Finger Joint -->
    <joint name="${prefix}left_finger_joint" type="prismatic">
      <origin xyz="0.02 0 0.04" rpy="0 0 0"/>
      <parent link="${prefix}onrobot_base_link"/>
      <child link="${prefix}left_finger_link"/>
      <axis xyz="1 0 0"/>
      <limit lower="0.0" upper="0.035" effort="140" velocity="0.45"/>
      <mimic joint="${prefix}finger_width" multiplier="0.5" offset="0"/>
    </joint>

    <!-- Right Finger Joint -->
    <joint name="${prefix}right_finger_joint" type="prismatic">
      <origin xyz="-0.02 0 0.04" rpy="0 0 0"/>
      <parent link="${prefix}onrobot_base_link"/>
      <child link="${prefix}right_finger_link"/>
      <axis xyz="-1 0 0"/>
      <limit lower="-0.035" upper="0.0" effort="140" velocity="0.45"/>
      <mimic joint="${prefix}finger_width" multiplier="0.5" offset="0"/>
    </joint>

    <!-- TCP Link -->
    <link name="${prefix}gripper_tcp"/>
    <joint name="${prefix}tcp_joint" type="fixed">
      <origin xyz="0 0 0.12" rpy="0 0 0"/>
      <parent link="${prefix}onrobot_base_link"/>
      <child link="${prefix}gripper_tcp"/>
    </joint>

    <!-- Transmission for ROS Control -->
    <xacro:transmission_macro prefix="${prefix}" joint_name="finger_width"/>

  </xacro:macro>
</robot>